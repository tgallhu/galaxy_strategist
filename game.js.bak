function playSound(soundName) {
    if (!audioEnabled) return; // Skip if audio is disabled
    try {
        if (sounds[soundName]) {
            sounds[soundName](audioContext);
        }
    } catch (e) {
        console.warn('Audio playback failed:', e);
    }
}

function toggleAudio() {
    audioEnabled = !audioEnabled;
}

